<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item android:bottom="25dp">
                <shape android:shape="line">
                    <stroke android:width="0dp"  android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:top="25dp">
                <shape android:shape="line">
                    <stroke android:width="1dp"  android:color="@color/colorSoftFunColor"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <!--仅仅底部有边框线-->
    <item>
        <layer-list>
            <item android:bottom="25dp">
                <shape android:shape="line">
                    <stroke android:width="0dp"  android:color="@android:color/transparent"/>
                </shape>
            </item>
            <item android:top="25dp">
                <shape android:shape="line">
                    <stroke android:width="0.5dp"  android:color="@color/colorSecondText"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>