<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?android:attr/selectableItemBackground"
              android:orientation="vertical">

    <LinearLayout
        android:id="@id/ll_item_layout_sort_key"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@color/colorContentGroup">

        <TextView
            android:id="@id/tv_pinyinf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            tools:text="F"
            android:textColor="@color/colorSecondText"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:padding="8dip">

        <ImageView
            android:id="@id/iv_avater"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin_half"
            android:src="@mipmap/ic_launcher_thumb"/>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="范张"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/font_body"/>

            <ImageView
                android:id="@+id/iv_vip"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                android:layout_toRightOf="@id/tv_nickname"
                tools:src="@mipmap/vip1"
                />

            <TextView
                android:id="@id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_nickname"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="4dip"
                tools:text="在线"
                android:textColor="@color/colorSoftFunColor"
                android:textSize="@dimen/tab_fontsize"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>